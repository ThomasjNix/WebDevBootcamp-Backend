<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
             <img src="<%= blog.image %>" class="ui centered rounded image">
             <div class="description">
                 <p><%- blog.body %></p>    
             </div>
             <div class="content>">
                 <span>Crated <%= blog.created.toDateString() %></span>
             </div>
             
             
             <a class="ui green button" href="/blogs/<%= blog._id %>/edit">Edit this blog</a>
             <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="form-inline">
                 <button class="ui red button" type="submit">Delete this blog</button>
             </form>
        </div>
    </div>
    
</div>
<% include partials/footer %>